/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "lib": ["es6", "dom"],
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
  }
}